<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:jgarcesEP"
             x:Class="jgarcesEP.App">
    <Application.Resources>
        <Style x:Key="estiloLabel" TargetType="Label">
            <Setter Property="TextColor" Value="LightSkyBlue"/>
        </Style>
        <Style x:Key="estiloEntry" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="TextColor" Value="LightCoral"/>
        </Style>
        <Style x:Key="estiloButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="LightSkyBlue"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
